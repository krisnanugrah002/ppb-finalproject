<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Izin-izin yang WAJIB ada -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" /> <!-- Izin lama untuk Android 12 ke bawah -->

    <!-- SAYA TAMBAHKAN: Izin untuk MENULIS foto ke galeri (Hanya untuk Android <= 9) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" /> <!-- Izin baru untuk Android 13+ -->

    <!-- Memberitahu Google Play bahwa kamera adalah fitur, tapi tidak wajib -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalProjectPPB"
        tools:targetApi="31">

        <!--
        Kita asumsikan Anda punya SplashActivity sebagai LAUNCHER
        (Seperti di file m_017)
        -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.FinalProjectPPB"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Daftarkan MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.FinalProjectPPB"
            android:screenOrientation="portrait" />

        <!--
        INI ADALAH PERBAIKANNYA:
        Mendaftarkan LoadingActivity ke "buku telepon" aplikasi.
        Tanpa ini, aplikasi akan CRASH.
        -->
        <activity
            android:name=".LoadingActivityy"
            android:exported="false"
            android:theme="@style/Theme.FinalProjectPPB"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.finalprojectppb.ResultActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.FinalProjectPPB" />



    </application>

</manifest>

